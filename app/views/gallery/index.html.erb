<article class="message is-danger is-light">
<div class="message-header">
 <%= link_to 'Home', gallery_index_path %>
 <%= link_to 'About', about_index_path %>
 <%= link_to 'Search', artworks_index_path %>
  <%= link_to 'Inspirations', inspirations_index_path %>
  <%= link_to 'All Artworks', gallery_index_path %>
</div>
</article>
<div class="tile is-parent">
  <article class="tile is-child message is-danger">
    <p class="title">Welcome to Blair's World - See all the products below</p>
  </article>
</div>

<div class="tile is-parent message is-danger">
  <article class="tile is-child notification is-danger is-light">
    <p class="title">Artworks</p>
      <ul class="ml-5">
        <% @artworks.each do |a| %>
          <li><%= link_to a.title, a %></li>
        <% end %>
      </ul>
  </article>
</div>

<div class="tile is-parent message is-danger is-light">
  <article class="tile is-child">
    <%=paginate @artworks%>
  </article>
</div>