<%= debug session[:cart] %>
<article class="message is-danger is-light">
<div class="message-header">
 <%= link_to 'Account', root_path %>
 <%= link_to 'About', about_index_path %>
 <%= link_to 'Search', artworks_index_path %>
  <%= link_to 'Inspirations', inspirations_index_path %>
  <%= link_to 'All Artworks', gallery_index_path %>
</div>

</article>
<div class="tile is-parent">
  <article class="tile is-child message is-danger">
    <p class="title">Welcome to Blair's World for the <%= pluralize @visit_count, 'time' %>  - See all the products below</p>
    <article class="message is-danger">
      <% if current_user %>
        <p> You have sucessfully logged in as <%= current_user.username %>!</p>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete,
            form: {data: {turbo_confirm: 'Are you sure?'}} %>
      <% else %>
        <p>You are browsing our website as guest now</p>
        <%= link_to "Sign Up", new_user_registration_path %>
        <br />
        <%= link_to "Sign In", new_user_session_path %>
      <% end %>
    </article>
    <details>
      <summary>Shopping Cart</summary>
      <ul>
        <% @cart.each do |artwork|%>
          <li>

        <%if @cart.include?(artwork)%>
        <%= artwork.title %>
          <%= button_to 'remove from cart', remove_from_cart_path(artwork), method: :delete %>
        <%else%>
          <p>not in your cart</p>
        <% end %>
          </li>
        <% end %>
      </ul>
    </details>
  </article>
</div>
<%= render partial: 'gallery', collection: @artworks, locals: { show_link: true } %>
<div class="tile is-parent message is-danger is-light">
  <article class="tile is-child">
    <%=paginate @artworks%>
  </article>
</div>